<header class="page-header">
  <h1>
    Cards
    <span class='card-header-link'> <%= link_to 'new card', new_card_path %></span>
  </h1>
</header>


<% @cards.each do |card| %>
  <div class="card-container">
    <div class="card">
      <p><%= card.name %></p>
      <p><%= card.ingredients %></p>
      <p><%= card.mix_method %></p>
      <p><%= card.garnish %></p>
    </div>
  
  </div>
<% end %>
