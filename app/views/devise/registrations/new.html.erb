<div class="signup">
<h1 > FlashBar </h1>
<h2> Flashcards for bartenders </h2>
</div>

<div class="border-form-div">
  <h2>Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <!-- <%= devise_error_messages! %> -->
    <div class="field">
      <p><%= f.label :first_name %><br /></p>
    <p><%= f.text_field :first_name, autofocus: true %></p>
    </div>

    <div class="field">
      <p><%= f.label :last_name %><br /></p>
      <p><%= f.text_field :last_name %></p>
    </div>
    <p><%= f.email_field :email, :placeholder => 'Email address' %></p>
    <p><%= f.password_field :password, :placeholder => 'Password' %></p>
    <p><%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %></p>
    <%= f.submit "Sign up",:class=>'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

